{% extends 'base.html.twig' %}

{% block body %}
    <h1>Visites list</h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visite in visites %}
            <tr>
                <td><a href="{{ path('visites_show', { 'id': visite.id }) }}">{{ visite.date }}</a></td>
                <td>{{ visite.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('visites_show', { 'id': visite.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('visites_edit', { 'id': visite.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('visites_new') }}">Create a new visite</a>
        </li>
    </ul>
{% endblock %}
