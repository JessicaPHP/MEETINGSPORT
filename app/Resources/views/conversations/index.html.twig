{% extends 'base.html.twig' %}

{% block body %}
    <h1>Conversations list</h1>

    <table>
        <thead>
            <tr>
                <th>Dateevent</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conversation in conversations %}
            <tr>
                <td><a href="{{ path('conversations_show', { 'id': conversation.id }) }}">{{ conversation.dateevent | date('Y-m-d') }}</a></td>
                <td>{{ conversation.getIdsport() }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('conversations_show', { 'id': conversation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('conversations_edit', { 'id': conversation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conversations_new') }}">Create a new conversation</a>
        </li>
    </ul>
{% endblock %}
