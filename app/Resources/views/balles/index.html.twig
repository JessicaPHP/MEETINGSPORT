{% extends 'base.html.twig' %}

{% block body %}
    <h1>Balles list</h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for balle in balles %}
            <tr>
                <td><a href="{{ path('balles_show', { 'id': balle.id }) }}">{{ balle.date }}</a></td>
                <td>{{ balle.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('balles_show', { 'id': balle.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('balles_edit', { 'id': balle.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('balles_new') }}">Create a new balle</a>
        </li>
    </ul>
{% endblock %}
